
<div class="level-filter">
      <div class="filter-dropdown">
        <button class="filter-button dropdown-toggle m-0 text-secondary"
                type="button"
                data-bs-toggle="dropdown"
                aria-expanded="false">
          <span class="filter-item" >Level</span>
        </button>
        <ul class="dropdown-menu">
          <li><a data-filter-target="level"
                 data-target="Beginner"
                 data-action="click->filter#level"
                 class="dropdown-item"
                 >Beginner</a></li>
          <li><a data-filter-target="level"
                 data-target="Intermediate"
                 data-action="click->filter#level"
                 class="dropdown-item"
                 >Intermediate</a></li>
          <li><a data-filter-target="level"
                 data-target="Advanced"
                 data-action="click->filter#level"
                 class="dropdown-item"
                 >Advanced</a></li>
        </ul>
  </div>

  <div class="filter-selection"  data-filter-target="selectedlevel"></div>

</div>
