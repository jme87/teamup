<div class="city-filter">
      <div class="filter-dropdown">
        <button class="filter-button dropdown-toggle m-0 text-secondary"
                type="button"
                data-bs-toggle="dropdown"
                aria-expanded="false">
          <span class="filter-item" >City</span>
        </button>
        <ul class="dropdown-menu">
          <% cities = Event.pluck(:city).uniq %>
          <% cities.each do |city| %>
              <li><a data-filter-target="city"
                    data-target="<%=city%>"
                    data-action="click->filter#city"
                    class="dropdown-item">
                    <%= city %> </a></li>
          <% end %>
        </ul>
  </div>

    <div class="filter-selection" data-filter-target="selectedcity"><%= @city %></div>

</div>
