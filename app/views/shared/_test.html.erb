   <div class="collapse navbar-collapse d-flex gap-2" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary" %>
        <%= link_to "Log in", new_user_session_path, class: "btn btn-primary" %>
      <% end %>

      <ul class="navbar-nav me-auto">

          <li class="nav-item dropdown">
            <% if user_signed_in? %>
              <% if current_user.photo.attached? %>
                <%= cl_image_tag current_user.photo.key, width: 40, height: 40, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, crop: :thumb, gravity: :face %>
              <% else %>
                <%= image_tag "placeholder.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% end %>
            <% end %>

            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Home", profile_path, class: "dropdown-item" %>
              <%= link_to "Messages", profile_path, class: "dropdown-item" %>
              <hr>
               <%= link_to "Find an Event", events_path, class: "dropdown-item" %>
              <%= link_to "Your Events", user_events_path, class: "dropdown-item" %>
              <%= link_to "Your Groups", user_groups_path, class: "dropdown-item" %>
              <hr>
              <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: "delete" }, class: "dropdown-item" %>
            </div>
          </li>
      </ul>
    </div>
