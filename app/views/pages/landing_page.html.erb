<%= render "shared/home_banner" %>

<%= render "shared/category_bar" %>
<div class="results-card-container">
  <div class="d-flex align-items-center gap-2">
    <h2> Top 5 events in </h2>
    <div class="city-dropdown" style="margin-bottom:5px; background-color:#fff">
      <button style="border-width:0;" class=" dropdown-toggle m-0"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false">
        <span style="font-size:1.8em; color:orange; "> <%= @city %></span>
      </button>
      <ul class="dropdown-menu">
      <% @unique_citys.each do |city| %>
        <li class="dropdown-item"><%= link_to "#{city}", events_path(city: "#{city}") %></li>
      <% end %>
      </ul>
    </div>
  </div>


  <div class="index-event-cards">
    <% @near_events.each do |event| %>
    <div class="index-event-card">
      <%= render "shared/event_card_long", event: event %>
    </div>
    <% end %>
  </div>
  <br><br>
  <div class="text-center">
    <%= link_to "See all Events in #{@city}", events_path(query: "#{@city}"), class: "btn btn-primary btn-lg" %>
  </div>
  <br>
</div>
